{
	"compilerOptions": {
		"strict": true,
		"types": ["./data/data.d.ts"]
	},
	"lint": {
		"files": {
			"exclude": ["src/", "dist/", "node_modules/"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"]
		}
	},
	"fmt": {
		"files": {
			"exclude": ["src/", "dist/", "node_modules/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 120,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
